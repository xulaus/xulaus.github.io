main, footer { margin: 0 20%; width: auto; display: block }

@media only screen and (max-width: 1000px) {
  main, footer { margin: 0 auto; width: 600px; }
}

@media only screen and (max-width: 634px) {
  main, footer { margin: 0 17px; width: auto; }
}

body {
  font-family: "Helvetica", sans-serif;
  font-size: 17px;
  color: #c5ccc5;
  background-color: #222222;
}

h1, h2, h3, h4, h5, h6, code, pre {
  font-family: "Anonymous Pro"
}
p, pre, ul, ol { margin: 0 0 1em 0}
pre { padding: 0.5em; overflow-x: scroll;}
a { color: #807aaa; }

.well {
  background-color: #2b303b;
  padding: 1em;
  border-radius: 4px;
  margin: 0.5em
}
